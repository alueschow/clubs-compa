{%  extends 'admin_base.html.twig' %}

{% block messages %}
{% if app.request.get('logout') == "success" %}
    <div class="row">
        <div class='col-lg-4 offset-lg-4 alert alert-success message fadeOut animated text-center'>You have been successfully logged out!</div>
    </div>
{% endif %}
{% if error %}
    <div class="row">
        <div class='col-lg-4 offset-lg-4 alert alert-danger message fadeOut animated text-center'>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    </div>
{% endif %}
{% endblock %}

{% block content %}
<div class="container main-container">
    <div class="row">
        <div class="col-lg-4 offset-lg-4 text-center">
            <form action="{{ path('admin') }}" method="post">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" autofocus="autofocus" class="form-control" placeholder="Your Name"/>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" placeholder="Password" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-dark">login</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}