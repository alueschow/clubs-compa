{% extends 'admin_base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block content %}
<div class="row mt-2">
    <div class="col-lg-12">

        {{ form_start(form) }}
        <h5>Presentation</h5>
        <div class="form-group row">
            {{ form_label(form.presentationMode) }}
            <div class="col-sm-3">
                {{ form_widget(form.presentationMode) }}
            </div>
        </div>
        <div id="app_configuration_url" class="form-group row">
            {{ form_label(form.url) }}
            <div class="col-sm-10">
                {{ form_widget(form.url) }}
            </div>
        </div>
        <div id="app_configuration_presentationFields" class="form-group row">
            {{ form_label(form.presentationFields) }}
            <div class="col-lg-2">
                {{ form_widget(form.presentationFields) }}
            </div>

            <div class="col-lg-8">
                <div class="col-lg-12">
                    <i>Field names</i>
                    <div id="app_configuration_presentationFieldName_1" class="form-group row">
                        {{ form_label(form.presentationFieldName_1) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.presentationFieldName_1) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_2" class="form-group row">
                        {{ form_label(form.presentationFieldName_2) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.presentationFieldName_2) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_3" class="form-group row">
                        {{ form_label(form.presentationFieldName_3) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.presentationFieldName_3) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_4" class="form-group row">
                        {{ form_label(form.presentationFieldName_4) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.presentationFieldName_4) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% if currently_active_assessment_category == 'Assessment' %}
            <hr>

            <h5>Queries and Topics</h5>
            <div id="app_configuration_queryStyle" class="form-group row">
                {{ form_label(form.queryStyle) }}
                <div class="col-lg-2">
                    {{ form_widget(form.queryStyle) }}
                </div>

                <div class="col-lg-8">
                    <div class="col-lg-12">
                        <div id="app_configuration_queryHeadingName" class="form-group row">
                            {{ form_label(form.queryHeadingName) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.queryHeadingName) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div id="app_configuration_topicHeadingName" class="form-group row">
                            {{ form_label(form.topicHeadingName) }}
                            <div class="col-lg-8">
                                {{ form_widget(form.topicHeadingName) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            {% do form.queryStyle.setRendered %}
            {% do form.queryHeadingName.setRendered %}
            {% do form.topicHeadingName.setRendered %}
        {% endif %}

        <hr>

        <h5>Document</h5>
        <div class="form-group row">
            <div class="col-sm-4">
                {{ form_widget(form.documentHeading) }}
            </div>
            <div class="col-lg-8">
                <div class="col-lg-12">
                    <div id="app_configuration_documentHeadingName" class="row">
                        {{ form_label(form.documentHeadingName) }}
                        <div class="col-lg-8">
                            {{ form_widget(form.documentHeadingName) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <h5>Skipping</h5>
        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_widget(form.skippingAllowed) }}
            </div>
            <div id="app_configuration_skipping_options" class="col-sm-3">
                {{ form_widget(form.skippingOptions) }}
            </div>
            <div id="app_configuration_skipping_comment" class="col-sm-3">
                {{ form_widget(form.skippingComment) }}
            </div>
        </div>

        <hr>

        <h5>Progress bars</h5>
        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_widget(form.userProgressBar) }}
            </div>
            <div class="col-sm-3">
                {{ form_widget(form.totalProgressBar) }}
            </div>
        </div>

        <hr>

        <h5>Assessment loading</h5>
        {% if currently_active_assessment_category == 'Assessment' %}
            <div class="form-group row">
                <div class="col-sm-3">
                    {{ form_widget(form.groupBy) }}
                </div>
                <div id="app_configuration_group_by_options" class="col-sm-3">
                    {{ form_widget(form.groupByCategory) }}
                </div>
            </div>
        {% else %}
            {% do form.groupBy.setRendered %}
            {% do form.groupByCategory.setRendered %}
        {% endif %}
        <div class="form-group row">
            <div class="col-sm-6">
                {{ form_widget(form.loadingNewDocument) }}
            </div>
        </div>

        <hr>

        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_widget(form.submit) }}
            </div>
        </div>

        {{ form_end(form) }}

    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/assessment_module_general_config.js')}}" ></script>
{% endblock %}
