
{# Information/Help for the current page #}
<div class="toast col-lg-12" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
    <div class="toast-header">
        <strong class="mr-auto">Rating Options</strong>
    </div>
    <div class="toast-body">
        Add or remove rating options.
        <br>
        <br>
        You can also change the heading of the rating form.
    </div>
</div>

{# Specify single alerts below #}
{% set message = "" %}
{% set style = "alert-info" %}

{% if rating_option_added is defined and rating_option_added %}
    {% set message = "Rating option added" %}
{% elseif rating_option_deleted is defined and rating_option_deleted %}
    {% set message = "Rating option deleted" %}
{% elseif rating_option_exists is defined and rating_option_exists %}
    {% set message = "Invalid rating option configuration!
    Either the name, short name or priority already exists!" %}
    {% set style = "alert-danger" %}
{% elseif metrics_activated is defined and metrics_activated %}
    {% set message = "'Used in metrics' option activated" %}
{% elseif metrics_deactivated is defined and metrics_deactivated %}
    {% set message = "'Used in metrics' option deactivated" %}
{% elseif heading_changed is defined and heading_changed %}
    {% set message = "Rating heading changed" %}
{% endif %}

{% if message|length > 0 %}
    <div class="toast col-lg-12 alert {{ style }}" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto">{{ message|nl2br }}</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{% endif %}