{% extends 'admin_base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}


{% block content %}

<div class="row mt-2">
    <div class="col-lg-12">

        {{ form_start(form) }}
        <h5>Presentation</h5>
        <div class="form-group row">
            {{ form_label(form.presentationMode) }}
            <div class="col-sm-3">
                {{ form_widget(form.presentationMode) }}
            </div>
        </div>
        <div id="app_configuration_url" class="form-group row">
            {{ form_label(form.url) }}
            <div class="col-sm-10">
                {{ form_widget(form.url) }}
            </div>
        </div>
        <div id="app_configuration_presentationFields" class="form-group row">
            {{ form_label(form.presentationFields) }}
            <div class="col-lg-2">
                {{ form_widget(form.presentationFields) }}
            </div>

            <div class="col-lg-8">
                <div class="col-lg-12">
                    <i>Field names</i>
                    <div id="app_configuration_presentationFieldName_1" class="form-group row">
                        {{ form_label(form.presentationFieldName_1) }}
                        <div class="col-lg-5">
                            {{ form_widget(form.presentationFieldName_1) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_2" class="form-group row">
                        {{ form_label(form.presentationFieldName_2) }}
                        <div class="col-lg-5">
                            {{ form_widget(form.presentationFieldName_2) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_3" class="form-group row">
                        {{ form_label(form.presentationFieldName_3) }}
                        <div class="col-lg-5">
                            {{ form_widget(form.presentationFieldName_3) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div id="app_configuration_presentationFieldName_4" class="form-group row">
                        {{ form_label(form.presentationFieldName_4) }}
                        <div class="col-lg-5">
                            {{ form_widget(form.presentationFieldName_4) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <h5>Button Labeling</h5>
        <div class="form-group row">
            {{ form_label(form.evalButton_left) }}
            <div class="col-sm-3">
                {{ form_widget(form.evalButton_left) }}
            </div>
            {{ form_label(form.evalButton_right) }}
            <div class="col-sm-3">
                {{ form_widget(form.evalButton_right) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.allowTie) }}
            <div class="col-sm-3">
                {{ form_widget(form.allowTie) }}
            </div>
        </div>
        <div id="app_configuration_middleButton" class="row">
            {{ form_label(form.middleButton) }}
            <div class="col-sm-3">
                {{ form_widget(form.middleButton) }}
            </div>
        </div>

        <hr>

        <h5>Randomization</h5>
        <div class="form-group row">
            <div class="col-sm-3">
                {{ form_widget(form.groupBy) }}
            </div>
            <div id="app_configuration_group_by_options" class="col-sm-3">
                {{ form_widget(form.groupByCategory) }}
            </div>
        </div>
        <div id="app_configuration_randomization_div">
            <div class="form-group row">
                <div class="col-sm-3">
                    {{ form_widget(form.randomization) }}
                </div>
            </div>
            <div id="app_configuration_document_order" class="form-group row">
                {{ form_label(form.documentOrder) }}
                {{ form_widget(form.documentOrder) }}
            </div>
        </div>

        <hr>
        {{ form_widget(form.submit) }}
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/comparison_module_general_config.js')}}"></script>
{% endblock %}
