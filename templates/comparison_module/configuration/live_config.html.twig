{% extends 'admin_base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block content %}

<div class="row mt-2">
    <div class="col-lg-12">

        {{ form_start(form) }}
        <h5>Button Labeling</h5>
        <div class="form-group row">
            {{ form_label(form.evalButton_left) }}
            <div class="col-sm-3">
                {{ form_widget(form.evalButton_left) }}
            </div>
            {{ form_label(form.evalButton_right) }}
            <div class="col-sm-3">
                {{ form_widget(form.evalButton_right) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.allowTie) }}
            <div class="col-sm-3">
                {{ form_widget(form.allowTie) }}
            </div>
        </div>
        <div id="app_configuration_middleButton" class="row">
            {{ form_label(form.middleButton) }}
            <div class="col-sm-3">
                {{ form_widget(form.middleButton) }}
            </div>
        </div>

        <hr>

        <h5>Randomization</h5>
        <div class="form-group row">
            {{ form_label(form.useBaseWebsite) }}
            <div class="col-sm-10">
                {{ form_widget(form.useBaseWebsite) }}
            </div>
        </div>
        <div  id="app_configuration_randomization_div">
            <div class="form-group row">
                <div class="col-sm-10">
                    {{ form_widget(form.randomization) }}
                </div>
            </div>
            <div id="app_configuration_document_order" class="form-group row">
                {{ form_label(form.documentOrder) }}
                {{ form_widget(form.documentOrder) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(form.randomization_participation) }}
            </div>
        </div>

        <hr>

        <h5>Cookie settings</h5>
        <div class="form-group row">
            {{ form_label(form.cookie_name) }}
            <div class="col-sm-4">
                {{ form_widget(form.cookie_name) }}
            </div>
            {{ form_label(form.cookie_expires) }}
            <div class="col-sm-4">
                {{ form_widget(form.cookie_expires) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.participations_per_time_span) }}
            <div class="col-sm-4">
                {{ form_widget(form.participations_per_time_span) }}
            </div>
            {{ form_label(form.time_span) }}
            <div class="col-sm-4">
                {{ form_widget(form.time_span) }}
            </div>
        </div>

        {{ form_widget(form.submit) }}
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}

{% block javascripts %}
        <script type="text/javascript" src="{{ asset('js/comparison_module_general_config.js')}}"></script>
{% endblock %}
