{# Information/Help for the current page #}
<div class="toast col-lg-12" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
    <div class="toast-header">
        <strong class="mr-auto">Website configuration</strong>
    </div>
    <div class="toast-body">
        Add or remove websites.
    </div>
</div>

{# Specify single alerts below #}
{% set message = "" %}
{% set style = "alert-info" %}

{% if added is defined and added %}
    {% set message = "Website added" %}
{% elseif deleted is defined and deleted %}
    {% set message = "Website deleted" %}
{% elseif base_changed is defined and base_changed %}
    {% set message = "Base website changed" %}
{% endif %}

{% if message|length > 0 %}
    <div class="toast col-lg-12 alert {{ style }}" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto">{{ message }}</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{% endif %}